# ==============================================================================
# .env.example - Template de Variáveis de Ambiente
# ==============================================================================
# 
# INSTRUÇÕES:
# 1. Copie este arquivo para cada ambiente:
#    - .env.dev
#    - .env.staging
#    - .env.prod
# 
# 2. Preencha com valores reais
# 
# 3. NUNCA commite arquivos .env no Git!
# 
# ==============================================================================

# ==============================================================================
# AMBIENTE
# ==============================================================================
ENVIRONMENT=development  # development | staging | production

# ==============================================================================
# DATABASE
# ==============================================================================
DB_USER=postgres
DB_PASSWORD=change-me-in-production
DB_HOST=db
DB_PORT=5432
DB_NAME=material_control

# URL completa (gerada automaticamente ou manual)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ==============================================================================
# BACKEND
# ==============================================================================
SECRET_KEY=change-me-minimum-32-characters-required
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
WORKERS=2       # Número de workers Gunicorn

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:80

# ==============================================================================
# FRONTEND
# ==============================================================================
VITE_API_URL=http://localhost:8000

# ==============================================================================
# REDIS (opcional)
# ==============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-me

# ==============================================================================
# MONITORING
# ==============================================================================
GRAFANA_PASSWORD=admin123

# ==============================================================================
# DEPLOY
# ==============================================================================
VERSION=1.0.0
BACKEND_REPLICAS=1
FRONTEND_REPLICAS=1

